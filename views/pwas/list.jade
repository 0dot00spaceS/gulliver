extends ../base.jade

block content
  h3 PWAs

  a(href="/pwas/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add PWA

  each pwa in pwas
    .media
      a(href="/pwas/#{pwa.id}")
        .media-left
            img(src=pwa.imageUrl || "/pwa.png")
        .media-body
          h4= pwa.name
          h4= pwa.manifestUrl
          p= pwa.startUrl

  if !pwas.length
    p No PWAs found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href="?pageToken=#{encodeURIComponent(nextPageToken)}") More
