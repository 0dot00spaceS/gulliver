extends ../base.jade

// [START form]
block content
  h3 #{action} PWA
  form(method="POST", enctype="multipart/form-data")
    .form-group
      label(for="manifestUrl") Manifest URL
      input.form-control(type="text", name="manifestUrl", id="manifestUrl", value=pwa.manifestUrl)
    .form-group
      label(for="manifest") Manifest content
      input.form-control(type="text", name="manifest", id="manifest", value=pwa.manifest, readonly=true)
    button.btn.btn-success(type="submit") Save
// [END form]
