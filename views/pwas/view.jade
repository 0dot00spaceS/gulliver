// [START view]
extends ../base.jade

block content
  h3 PWA
    small

  .btn-group
    a(href="/pwas/#{pwa.id}/edit", class='btn btn-primary btn-sm')
      i.glyphicon.glyphicon-edit
      span  Edit PWA
    a(href="/pwas/#{pwa.id}/delete", class='btn btn-danger btn-sm')
      i.glyphicon.glyphicon-trash
      span  Delete PWA

  .media
    .media-left
      img(src=pwa.imageUrl || "/pwa.png")
    .media-body
      h4= pwa.name
      h4= pwa.manifestUrl
      p= pwa.description
      p= pwa.manifest
// [END view]
