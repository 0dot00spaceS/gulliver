html, body {
  font-family: "Helvetica", "Arial", sans-serif;
  font-size: 14px;
  font-weight: 400;
  margin: 0 0 auto 0;
  height: 100%;
  width: 100%;
  min-width: 310px;
}

body {
  background: #eee;
}

.container {
  padding-right: 15px;
  padding-left: 15px;
  padding-bottom: 30px;
  margin-right: auto;
  margin-left: auto
}

.navbar {
  position: relative;
  height: 82px;
  background: #0A84F5;
  display: flex;
  flex-direction: column;
}
.navbar-title {
  height: 55px;
  color: white;
  font-size: 36px;
  text-align: center;
  line-height: 55px;
}
.navbar-title #title {
  align-self: flex-start;
  margin: 0 auto;
  text-align: left;
  padding-left: 55px;
  background-position: left center;
  background-repeat: no-repeat;
  background-image: -webkit-image-set( url(/favicons/android-chrome-48x48.png) 1x, url(/favicons/android-chrome-96x96.png) 2x );
  -webkit-filter: drop-shadow( 1px 1px 1px #000 );
  filter: drop-shadow( 1px 1px 1px #000 );
}
.navbar-subtitle {
  height: 20px;
  color: white;
  font-size: 18px;
  text-align: center;
  line-height: 20px;
}
.navbar a {
  color: white;
  text-decoration: none;
}
.navbar #github {
  position: absolute;
  font-size: 16px;
  bottom: 28px;
  right: 15px;
}
.navbar #github-logo {
  vertical-align:middle;
}

/* Flex NavBar */
@media (max-width: 930px) {
  .navbar {
    height: 55px;
    padding-left: 15px;
  }
  .navbar-title {
    font-size: 30px;
    text-align: left;
  }
  .navbar-subtitle {
    height: 0px;
  }
  .navbar #github {
    text-align: right;
    bottom: 13px;
    right: 15px;
  }
  .hide-on-mobile {
    display: none;
  }
}

.section-title {
  color: #0D47A1;
  font-size: 18px;
  font-weight: 600;
  background: #7cc0ff;
  padding-left: 15px;
  margin-bottom: 15px;
  line-height: 40px;
  height: 40px;
}

#auth-button {
  position: absolute;
  bottom: -50px;
  right: 10px;
}

button {
  padding: 0 5px 5px 5px;
}
.button {
  font-size: 14px;
  color: white;
  width: 100px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  margin-bottom: 15px;
  margin-right: 5px;
  display: inline-block;
  border:none;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  background-image: none;
  border: 1px solid transparent;
  border-radius: 4px
}
button[disabled=disabled], button:disabled {
  opacity: 0.5;
  cursor: default;
}
.button:not([disabled]):hover {
  opacity: 0.5;
}
.green {
  background: #33691E;
}
.blue {
  background: #0D47A1;
}
.red {
  background: #B71C1C;
}
.button  a {
  color: white;
  text-decoration: none;
  display: block;
  width: 100%;
  height: 100%;
}

/* PWA List Box */
.pwabox {
  border: 2px solid lightgray;
  text-overflow: hidden;
}
.pwabox-body {
  display: flex;
  flex-direction: row;
}
.pwabox-left {
  display:block;
  width: 85px;
  padding: 5px 5px 5px 10px;
}
.pwabox-right {
  display: flex;
  flex-direction: column;
  padding: 5px 10px 5px 5px;
  width: 100%;
}
.pwabox-right .name {
  text-align: left;
  font-size: 16px;
  font-weight: 600;
  height: 50px;
  line-height: 54px;
}
.pwabox-right .lighthouseScore {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  height: 18px;
  line-height: 18px;
  font-size: 16px;
  font-weight: 400;
}
.pwabox-right .lighthouseLogo {
  padding-right: 5px;
}

/* PWA Detail box */
.pwadetail {
  -webkit-display: flex;
  display: flex;
  flex-flow: column;
  border: 2px solid lightgray;
  text-overflow: hidden;
  display: flex;
  padding: 10px 10px 20px 10px;
  justify-content: space-between;
  height: 345px;
  font-size: 14px;
  font-weight: 400;
  max-width: 800px;
  margin: 0 auto;
}
.manifest-detail {
  -webkit-display: flex;
  display: flex;
  flex-flow: column;
  border: 2px solid lightgray;
  text-overflow: hidden;
  display: flex;
  padding: 10px 10px 20px 10px;
  justify-content: space-between;
  height: 345px;
  overflow: scroll;
  font-size: 14px;
  font-weight: 400;
  max-width: 800px;
  margin: 0 auto;
  margin-top: 10px;
}

.lighthouse-detail {
  -webkit-display: flex;
  display: flex;
  flex-flow: column;
  border: 2px solid lightgray;
  text-overflow: hidden;
  display: flex;
  padding: 10px 10px 20px 10px;
  justify-content: space-between;
  height: 345px;
  overflow: scroll;
  font-size: 14px;
  font-weight: 400;
  max-width: 800px;
  margin: 0 auto;
  margin-top: 10px;
}
.pwadetail-logo {
 display:block;
}
.pwadetail-general {
  -webkit-display: flex;
  display: flex;
  flex-flow: column;
}
.pwadetail .name {
  font-size: 16px;
  font-weight: 600;
}
.pwadetail .lighthouseScore {
  display: flex;
  flex-direction: row;
  height: 24px;
  line-height: 24px;
  font-size: 16px;
}
.pwadetail .lighthouseLogo {
  padding-right: 5px;
}
.pwadetail .dates {
  font-style: italic;
}

.form-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 15px
}
.form-input {
  height: 20px;
  width: 80%;
  padding: 10px 16px;
  font-size: 16px;
}
.form-textbox {
  width: 80%;
  padding: 10px 16px;
  font-size: 16px;
  background: #F5F5F5;
  overflow: scroll;
  border: 1px solid lightgray;
}
.error {
  color: #f07;
}
.offline-status {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #dc322f;
  color: #ffffff;
  height: 20px;
  padding: 10px 20px 10px 20px;
  display: none;
}

/* Footer */
.footer {
  padding-top: 2px;
  padding-bottom: 2px;
  background: #0A84F5;
  color: white;  
}
.footer ul {
  display: flex;
  flex-flow: row;
  justify-content: center;
  padding: 0;
}
.footer ul li:first-child {
  border-left: none;
}
.footer li {
  display: block;
  padding: 0 1em;
  border-left: 1px solid #fff;
}
.footer ul li a {
  flex-flow: row wrap;
  justify-content: center;
  text-align: center;
  text-decoration: none;
  font-weight: 400;
  color: #fff;
  padding: 0;
  cursor: pointer;  
}

/* Pager */
.pager {
  display: flex;
  flex-flow: row;
  justify-content: center;
  padding: 0;
}

.pager li {
  width: 50%;
  display: block;
  padding: 0 1em;
}

.pager .next {
  text-align: right;
}

.pager li a {
  flex-flow: row wrap;
  justify-content: center;
  text-align: center;
  text-decoration: none;
  font-weight: 400;
  color: #0D47A1;
  padding: 0;
  cursor: pointer;
}

/* Flex List of PWAs */
.items {
  display: flex;
  flex-wrap: wrap;
  margin-left: -10px;
  margin-top: -10px;
}
.item a {
  text-decoration: none;
  display: block;
  width: 100%;
  height: 100%;
}
.items .item {
  flex: 1 0 280px;
  box-sizing: border-box;
  background: #e0ddd5;
  color: #171e42;
  margin-left: 10px;
  margin-top: 10px;
}
@media (min-width: 620px) {
  .items .item {
    max-width: calc(50% - 10px);
  }
}
@media (min-width: 930px) {
  .items .item {
    max-width: calc(33.33333% - 10px);
  }
}
@media (min-width: 1240px) {
  .items .item {
    max-width: calc(25% - 10px);
  }
}
@media (min-width: 1540px) {
  .items .item {
    max-width: calc(20% - 10px);
  }
}
@media (min-width: 1850px) {
  .items .item {
    max-width: calc(16.66667% - 10px);
  }
}
@media (min-width: 2160px) {
  .items .item {
    max-width: calc(14.28571% - 10px);
  }
}
/* Styles for highlighted JSON */
pre {padding: 5px; margin: 5px; }
.string { color: #0288D1; }
.number { color: red; }
.boolean { color: #FF5252; }
.null { color: magenta; }
.key { color: #212121; }

